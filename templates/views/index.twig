{% extends "../layouts/default.twig" %}

{% block content %}
	{% if stream %}
		<div ng-controller="AppController as app" ng-init="app.socketUrl = '{{ streamSocketUrl }}'; app.game = '{{ stream.game.game }}'">
			{% if user %}
				{% include 'stream.twig' %}
			{% else %}
				{% include 'auth.twig' %}
			{% endif %}
		</div>
	{% else %}
		{% include 'landing.twig' %}
	{% endif %}
{% endblock %}


{% if not stream %}
	{% block webflow %}
		<link href="/css/landing.css" rel="stylesheet" type="text/css">
		<link href="/css/landing.webflow.css" rel="stylesheet" type="text/css">
	{% endblock %}

	{% block webflowjs %}
		<script src="/js/vendor/modernizr.js" type="text/javascript"></script>
		<script src="/js/vendor/webflow.js" type="text/javascript"></script>
	{% endblock %}
{% endif %}
